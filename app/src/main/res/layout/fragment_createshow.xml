<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#11cd6e">

        <TextView
            android:id="@+id/tvCreateShow_Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvCreateShow_Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="发送"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etCreateShow_WordContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="分享点精彩乐跑..."
            android:paddingBottom="30dp" />

        <TextView
            android:id="@+id/tvCreateShow_Zishu"
            android:layout_width="wrap_content"
            android:layout_below="@+id/etCreateShow_WordContent"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="0/140" />

        <GridView
            android:id="@+id/gvCreateShow_PicContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCreateShow_Zishu"
            android:layout_marginTop="20dp"
            android:numColumns="4" />


    </RelativeLayout>


</LinearLayout>