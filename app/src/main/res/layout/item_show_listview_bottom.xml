<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlShowBottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvSendTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWordContent"
        android:padding="5dp"
        android:text="2小时前" />

    <TextView
        android:id="@+id/tvShow_Heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWordContent"
        android:layout_toLeftOf="@+id/tvShow_Comment"
        android:drawableLeft="@mipmap/show_heart"
        android:gravity="center"
        android:padding="5dp"
        android:text="50" />

    <TextView
        android:id="@+id/tvShow_Comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWordContent"

        android:layout_toLeftOf="@+id/tvShow_Share"
        android:drawableLeft="@mipmap/show_comment"
        android:gravity="center"
        android:padding="5dp"
        android:text="100" />

    <TextView
        android:id="@+id/tvShow_Share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvWordContent"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@mipmap/show_share"
        android:gravity="center"
        android:padding="5dp" />

</RelativeLayout>